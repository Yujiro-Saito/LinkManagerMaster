<div class="container-fluid">
  <div class="row">


    <% @folders.each do |f| %>

    <div class="col-sm-4">

      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= link_to f.title, folder_path(f) %></h4>
          <p class="card-text">Looks like the Sun has returned. Here's why.</p>
          <%= link_to '編集', edit_folder_path(f),  class: "btn btn-primary" %>
          <%= link_to '削除', folder_path(f), method: :delete, data: {confirm: "Are you sure?"},  class: "btn btn-primary" %>
        </div>
      </div>

    </div>
    <% end %>
  </div>
</div>

<%= link_to "新規作成", new_folder_path, class: "btn btn-primary", id: "addFolderButton" %>

